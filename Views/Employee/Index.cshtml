@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Card Container -->
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Header with Gradient -->
                <div class="bg-primary text-white text-center py-4" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
                    <h2 class="mb-1 fw-bold">Employee Dashboard</h2>
                    <p class="mb-0">Welcome back, <span id="employee-name">—</span></p>
                </div>

                <div class="card-body p-4">
                    <!-- Employee Info -->
                    <div id="employee-info" class="mb-4">
                        <p><strong>Department:</strong> —</p>
                        <p><strong>Manager:</strong> —</p>
                    </div>

                    <!-- Leave Stats -->
                    <div class="row text-center g-3">
                        <div class="col-4">
                            <div class="card rounded-3 shadow-sm bg-success text-white">
                                <div class="card-body py-3">
                                    <i class="bi bi-check-circle-fill fs-2 mb-2"></i>
                                    <h6 class="mb-1">Approved</h6>
                                    <h4 id="approved-count">0</h4>
                                </div>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="card rounded-3 shadow-sm bg-warning text-dark">
                                <div class="card-body py-3">
                                    <i class="bi bi-clock-fill fs-2 mb-2"></i>
                                    <h6 class="mb-1">Pending</h6>
                                    <h4 id="pending-count">0</h4>
                                </div>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="card rounded-3 shadow-sm bg-danger text-white">
                                <div class="card-body py-3">
                                    <i class="bi bi-x-circle-fill fs-2 mb-2"></i>
                                    <h6 class="mb-1">Rejected</h6>
                                    <h4 id="rejected-count">0</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Optional Request Leave Button -->
                    <div class="text-center mt-4">
                        <a href="/Employee/CreateLeaveRequest" class="btn btn-primary btn-lg rounded-pill shadow">Request Leave</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Employee/Index.js" asp-append-version="true"></script>
}
